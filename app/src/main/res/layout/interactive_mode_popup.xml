<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/imgInteractiveHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart_interactive"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="336dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imgInteractiveHeart"
        app:layout_constraintEnd_toEndOf="@+id/imgInteractiveHeart"
        app:layout_constraintStart_toStartOf="@+id/imgInteractiveHeart"
        app:layout_constraintTop_toTopOf="@+id/imgInteractiveHeart">

        <TextView
            android:id="@+id/interactivePopUpTitle"
            style="@style/PulseInteractiveTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/activity_profile_make_me_healthy"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/interactivePopUpDesc"
            style="@style/PulseScreenDeskModeTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Your next movement:"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/interactiveMovement"
            style="@style/PulseInteractiveMovement"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>