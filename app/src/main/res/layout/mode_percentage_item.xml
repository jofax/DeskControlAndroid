<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_blue_background_list_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/statisticPercentageTitle"
            style="@style/PulseScreenControlsHeaderStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/statistic_mode_percentage"
            android:textAlignment="center"
            android:textColor="#ffffff"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/statisticPercentageValue"
            style="@style/PulseStatisticRecyclyerItemStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="100%"
            android:textAlignment="center"
            android:textColor="#ffffff"
            tools:ignore="RtlCompat" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>