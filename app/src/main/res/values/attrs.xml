<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="shapeType" format="enum">
        <enum name="circle" value="1" />
        <enum name="square" value="2" />
        <enum name="heart" value="3" />
    </attr>
    <attr name="progress" format="integer" />
    <attr name="max" format="integer" />
    <attr name="borderWidthSize" format="dimension" />
    <attr name="frontColor" format="color" />
    <attr name="behideColor" format="color" />
    <attr name="borderColor" format="color" />
    <attr name="strong" format="integer" />
    <attr name="textColor" format="color" />
    <attr name="animatorEnable" format="boolean" />
    <attr name="textHidden" format="boolean" />
    <attr name="shapePadding" format="dimension" />

    <declare-styleable name="SPCustomShapeProgress">
        <attr name="progress" />
        <attr name="max" />
        <attr name="strong" />
        <attr name="frontColor" />
        <attr name="behideColor" />
        <attr name="borderColor" />
        <attr name="borderWidthSize" />
        <attr name="textColor" />
        <attr name="animatorEnable" />
        <attr name="shapeType" />
        <attr name="textHidden" />
        <attr name="shapePadding" />
    </declare-styleable>

    <declare-styleable name="SPCircularProgressIndicator">

        <attr name="progressColor" format="color" />
        <attr name="progressBackgroundColor" format="color" />
        <attr name="progressStrokeWidth" format="dimension" />
        <attr name="progressBackgroundStrokeWidth" format="dimension" />

        <attr name="textCircularProgressColor" format="color" />
        <attr name="textSize" format="dimension" />

        <attr name="formattingPattern" format="string|reference" />

        <attr name="drawDot" format="boolean" />
        <attr name="dotColor" format="color" />
        <attr name="dotWidth" format="dimension" />

        <attr name="startAngle" format="integer|reference" />

        <attr name="direction" format="enum">
            <enum name="clockwise" value="0" />
            <enum name="counterclockwise" value="1" />
        </attr>

        <attr name="progressCap" format="enum">
            <enum name="round" value="0" />
            <enum name="butt" value="1" />
        </attr>

        <attr name="enableProgressAnimation" format="boolean" />

        <attr name="fillBackground" format="boolean" />

        <attr name="gradientEndColor" format="color|reference"/>
        <attr name="gradientType" format="enum">
            <enum name="no_gradient" value="0"/>
            <enum name="linear" value="1"/>
            <enum name="radial" value="2"/>
            <enum name="sweep" value="3"/>
        </attr>
    </declare-styleable>
</resources>